        <developerConnection>scm:git:git@github.com:osglworks/java-http.git</developerConnection>
        <url>git://github.com/osglworks/java-http.git</url>
    </scm>

    <properties>
        <osgl-tool.version>1.25.0</osgl-tool.version>
